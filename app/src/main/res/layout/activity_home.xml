<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        tools:context=".userActivity.HomeActivity">

    <RelativeLayout
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
        <ImageView
                android:src="@drawable/logo"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"/>
        <ImageView
                android:id="@+id/btnlogout"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_logout"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>
        <ImageView
                android:text="Detil"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_account"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>
        <ImageView
                android:text="Detil"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_baseline_shopping_cart_24"
                android:layout_marginRight="@dimen/_60sdp"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_279sdp"
            android:layout_height="@dimen/_128sdp"
            app:cardCornerRadius="@dimen/_13ssp"
            app:cardElevation="@dimen/_2ssp"
            tools:ignore="MissingConstraints">
    <com.synnapps.carouselview.CarouselView
            android:id="@+id/imgslide"
            app:pageColor="#ffff"
            app:fillColor="#ffff"
            app:slideInterval="3000"
            app:autoPlay="true"
            app:indicatorVisibility="invisible"
            app:radius="6dp"
            android:maxWidth="20dp"
            app:strokeColor="#ffff"
            app:strokeWidth="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/txtdftrspd"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Daftar Sepeda"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/graybootstrap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/dataList"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


</LinearLayout>